<%- include('../header.ejs') %>
    <%- include('../sidebar.ejs') %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Display School slider</h3>
                    <button data-toggle="modal" data-target="#modal-default" class="btn btn-success"
                        style="float: right;">Add Slider</button>
                </div>
                <!-- /.card-header -->
                <% if(message.length >0){ %>
                    <div class="alert alert-success">
                        <%= message %>
                    </div>
                <% } %>
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% i =1 %>
                            <% d.forEach((item)=>{ %>
                                <tr>
                                    <td>
                                        <%= i++ %>
                                    </td>
                                   
                                    <td>
                                        <img src="<%= item.image.url %>" alt="" width="100" style="border-radius: 50px;">
                                    </td>
                                    <td>
                                        <a href="/admin/sliderView/<%= item._id %>" class="btn btn-success">View</a>
                                        <a href="/admin/sliderEdit/<%= item._id %>" class="btn btn-info">Edit</a>
                                        <a href="/admin/sliderdelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>

                                <% })%>


                        </tbody>
                        <tfoot>
                            
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->


                <!-- modal start add school -->
                <div class="modal fade" id="modal-default">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Add Slider</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="/admin/insertslider" method="post" enctype="multipart/form-data">
                                   
                                    <div class="form-group">
                                      <label>Image</label>
                                        <input type="file" name="image" class="form-control" required>
                                    </div>
                                   
                                    
                                    


                                    <button class="btn btn-success">Submit</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal end -->
            </div>
            <!-- /.card -->



        </div>
        <!-- /.content-wrapper -->


        <%- include('../footer.ejs') %>