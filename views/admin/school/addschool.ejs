<%- include('../header.ejs') %>
<%- include('../sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Display School List</h3>
      <button class="btn btn-success" data-toggle="modal"
        data-target="#modal-default" style="float:right ;">Add School</button>
    </div>
    
    <!-- /.card-header -->
    <div class="card-body">
      
        <% if(message.length >0){ %>
          <div class="alert alert-success">
           <%= message %>
          </div>
       <% } %>
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Category</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% i =1 %>

          <% d.forEach((item)=>{ %>

          <tr>
            
            <td><%= i++ %> </td>
            <td><%= item.name %> </td>
            <td><%= item.schoolAddress %> </td>
            <td><%= item.category %> </td>
            <td>
              <img src="<%= item.image.url %>" alt width="100"
                style="border-radius: 50px;"> </td>

            <td>
              <a href="/admin/schoolview/<%= item._id%>" class="btn btn-success">view</a>
              <a href="/admin/schooledit/<%= item._id%>" class="btn btn-info">edit</a>
              <a href="/admin/schooldelete/<%= item._id%>"
                class="btn btn-danger">delete</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
        <tfoot>
        </tfoot>

      </table>
    </div>
    <!-- /.card-body -->

    <!-- model start add school -->
    <div class="modal fade" id="modal-default">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Add School</h4>
            <button type="button" class="close" data-dismiss="modal"
              aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/admin/insertschool" method="post"
              enctype="multipart/form-data">
              <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" class="form-control" required>
              </div>

              <div class="form-group">
                <label>Description</label>
               <textarea name="description" class="form-control" required></textarea>
              </div>
              <div class="form-group">
                <label>Affilatedboard</label>
                <input type="text" name="affilatedboard" class="form-control"
                  required>
              </div>
              <div class="form-group">
                <label>InstructionMedium</label>
                <input type="text" name="instructionMedium" class="form-control"
                  required>
              </div>
              <div class="form-group">
                <label>Category</label>
               <select name="category" class="form-control ">
                <option>select category</option>
                <% c.forEach((item)=>{ %>

                  <option value="<%= item.name %>"><%= item.name %></option>

                <% }) %>

               </select>
              </div>
              <div class="form-group">
                <label>SchoolAddress</label>
                <textarea name="schoolAddress" class="form-control" required></textarea>
              </div>
              <div class="form-group">
                <label>PhoneNumber</label>
                <input type="text" name="phoneNumber" class="form-control"
                  required>
              </div>
              <div class="form-group">
                <label>image</label>
                <input type="file" name="image" class="form-control"
                  required>
              </div>

              <button class="btn btn-success">SUMBIT</button>
            </form>
          </div>

        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <!-- model end -->
  </div>
  <!-- /.card -->
</div>
<!-- /.content-wrapper -->

<%- include('../footer.ejs') %>