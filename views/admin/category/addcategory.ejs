<%-include("../header.ejs") %>
<%-include("../sidebar.ejs") %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- /.card start -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Display Category list</h3>
        <button data-toggle="modal" data-target="#modal-default" class="btn btn-success" style="float: right;">Add Category</button>
      </div>
      <!-- /.card-header -->
      <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
          <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
            <% i =1 %>
            <% d.forEach((item)=>{ %>
 
              <tr>
                <td><%= i++ %> </td>
                <td> <%= item.name %></td>
                <td>
                  <img src="<%= item.image.url %>" alt width="100"
                    style="border-radius: 50px;"> </td>
    
                
              
                <td>
                  <a href="/admin/categoryView/<%= item._id %>" class="btn btn-success">View</a>
                  <a href="/admin/categoryedit/<%= item._id %>" class="btn btn-primary">Edit</a>
                  <a href="/admin/categorydelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
    
              <% })%>
          </tbody>

        </table>
      </div>
      <!-- /.card-body -->
      <div class="modal fade" id="modal-default">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Add Category</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>




              <div class="modal-body">
                <p>One fine body&hellip;</p>
                <form action="/admin/insertcategory" method="post" enctype="multipart/form-data">
                  <div class="form-group">
                  <label>Name</label>
                  <input type="text" name="name" class="form-control" required>
                </div>
                <div class="form-group">
                  <label>image</label>
                  <input type="file" name="image" class="form-control"
                    required>
                </div>
                
                <button class="btn btn-success">Submit</button>
                </form>
              </div>
             
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>
  
    <!-- /.card -->
    </div>
  </div>
  
  
    
    <!-- /.content-wrapperÂ -->
  </div>




 

